<% content_for :title do %>Welcome to Pharaoh.io<% end %>
<% content_for :description do %>Pharaoh.io is a service for generating invoices and tracking cash flows. Great for freelancers.<% end %>

<div class="intro-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="intro-message">
          <h1 class="company">Pharaoh.io</h1>
          <h3>Invoicing made for Kings.</h3>
          <br>
          <br>
          <%= link_to new_user_registration_path,
          class: 'btn btn-default btn-lg btn-login' do %>
            <span class="network-name">Register</span>
          <% end %>

          <%= link_to new_user_session_path,
          class: 'btn btn-default btn-lg btn-login' do %>
            <span class="network-name">&nbsp;&nbsp;Login&nbsp;&nbsp;</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
