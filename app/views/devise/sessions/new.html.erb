<% content_for :title do %>User Login<% end %>

<div class="container" id="login">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center login-title">
        <strong>Welcome to Pharaoh.io</strong>
      </h1>
    </div>

    <div class="col-xs-8 col-xs-2 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <div class="account-wall">
        <%= image_tag 'login/avatar.jpg', class: 'profile-img' %>

        <%= simple_form_for(resource,
          as: resource_name,
          url: session_path(resource_name),
          html: { class: 'form-signin' }
        ) do |f| %>
          <%= f.input :email,
            required: true,
            autofocus: true,
            input_html: { class: 'form-control' },
            label: false,
            placeholder: 'Email'
          %>

          <%= f.input :password,
            required: true,
            input_html: { class: 'form-control' },
            placeholder: 'Password',
            label: false
          %>

          <%= f.button :submit,
            'Login',
            class: 'btn btn-lg btn-primary btn-block'
          %>

          <label class="checkbox pull-left">
            <%= f.check_box :remember_me,
              as: (:boolean if devise_mapping.rememberable?),
              label: false
            %> Remember Me
          </label>
        <% end %>
        <br>
        <hr>
        <div class="login-links">
          <%= render 'devise/shared/links' %>
        </div>
      </div>
    </div>
  </div>
</div>
